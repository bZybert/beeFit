@model beeFit2019.Models.Body
@{
    ViewData["Title"] = "SetProfileDetails";
}

<h3 class="mt-3">Profile details</h3>
<hr />

<div class="card border-primary mb-3" style="max-width: 60rem;">
    <div class="card-header text-white bg-primary">Add your body measurement</div>
    <div class="card-body">




        @using (Html.BeginForm("SetProfileDetails", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        <div class="form-group ">

            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Day, new { @class = "form-control-sm", @placeholder = "date: (MM/dd/yyy)" })
            </div>
        


            <div class="col-md-10 mt-3">
                @Html.TextBoxFor(m => m.Weight, new { @class = "form-control-sm", @placeholder = "weight: (kg)" })
            </div>
        </div>
            <hr />
            <p class="card-text">Enter data in imperial units (cm)</p>
            <div class="form-inline">
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.LBic, new { @class = "form-control-sm", @placeholder = "left biceps: " })
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.RBic, new { @class = "form-control-sm", @placeholder = "right biceps: " })
                    </div>
                </div>



                <div class="form-group">

                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Waist, new { @class = "form-control-sm", @placeholder = "waist: " })
                    </div>
                </div>
                
            </div>

            
            
            <div class="form-inline mt-3">
                <div class="form-group">
                   
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.LThigh, new { @class = "form-control-sm", @placeholder = "left thigh: " })
                    </div>
                </div>
                <div class="form-group">
                  
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.RThigh, new { @class = "form-control-sm", @placeholder = "right thigh: " })
                    </div>
                </div>
            
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Chest, new { @class = "form-control-sm", @placeholder = "chest:" })
                    </div>
                </div>
            </div>
            <br />
            

            <div class="modal-footer">
                <button type="button" class="btn btn-success ">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" asp-controller="Home" asp-action="Options">Close</button>
            </div>
        }


    </div>
</div>



