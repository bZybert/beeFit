@model beeFit2019.Models.TrainingPlan
@{
    ViewData["Title"] = "EditTrainingPlan";
}

<h1>EditTrainingPlan</h1>

<div>
    @using (Html.BeginForm("SetProfileDetails", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

    <div class="card border-success mb-3" style="max-width: 60rem;">
        <div class="card-header">Add new trening</div>
        <div class="card-body">
            <div class="form-group ">

                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.WeekNumber, (IEnumerable<SelectListItem>)ViewBag.weeknumber,"Select number of week")
                </div>

                <hr />
                <h4> Enter plan for each day </h4>
                <div class="form-inline">

                    <div class="form-group ">


                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Mon, new { @class = "form-control-sm", @placeholder = "Monday" })
                        </div>

                    </div>
                    <div class="form-group ">

                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Tue, new { @class = "form-control-sm", @placeholder = "Tuesday" })
                        </div>

                    </div>
                    <div class="form-group ">

                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Wed, new { @class = "form-control-sm", @placeholder = "Wednesday" })
                        </div>

                    </div>
                </div>

                <div class="form-inline">

                    <div class="form-group ">

                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Thr, new { @class = "form-control-sm", @rows = "3", @placeholder = "Thursday" })
                        </div>

                    </div>
                    <div class="form-group ">

                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Fri, new { @class = "form-control-sm", @placeholder = "Friday" })
                        </div>

                    </div>
                    <div class="form-group ">

                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Sat, new { @class = "form-control-sm", @placeholder = "Saturday" })
                        </div>

                    </div>
                </div>
               
                
                <div class="form-group ">

                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Sun, new { @class = "form-control-sm", @placeholder = "Sunday" })
                    </div>

                </div>
            </div>



        </div>

        <hr />
        <div class="modal-footer">
            <button type="submit" class="btn btn-success ">Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal" asp-controller="Home" asp-action="Options">Close</button>
        </div>
    </div>
       


        

    }
</div>

